<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type Button}">
        <Setter Property="Background" Value="#AFEEEE"/>
        <Setter Property="BorderBrush" Value="#0000"/>
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="MinHeight" Value="40"/>
    </Style>

    <Style TargetType="{x:Type DataGrid}">
        <Setter Property="Background" Value="#FADADD"/>
        <Setter Property="BorderBrush" Value="#0000"/>
    </Style>

    <Style TargetType="{x:Type Image}" x:Key="logoImageStyle">
        <Setter Property="Source" Value="..\Images\services.png"/>
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Margin"  Value="10,10,0,0"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <Style TargetType="{x:Type Window}" x:Key="windowStyle">
        <Setter Property="Background" Value="#FADADD"/>
        <Setter Property="FontFamily" Value="Times New Roman"/>
    </Style>
</ResourceDictionary>